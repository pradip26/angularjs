<?php

$m = new MongoClient("mongodb://localhost");

if ($m) {
echo 'connected';
} else {
echo 'acess denied';
}
       //start creating db name
       $dbname = 'user_activity';
$db=$m->$dbname;
//get the user collection
       $selectcollection=$db->user_data;
       //create document name user
       $user = array(
'name' => 'sanki',
'desg' => 'ui',
'tags' => 'developer'
        );              
       $selectcollection->save($user);
       $findalldata=$selectcollection->find(array());

       foreach ($findalldata as $userdata){
print_r($userdata);
               
       } 




